{
  "icon": "icon.svg",
  "runtimeScriptFileNames": [
    "runtime_logic.js"
  ],
  "runtimeStyleFileNames": [
    "runtime_style.css"
  ],
  "designtimeScriptFileNames": [
    "designtime_logic.js"
  ],
  "designtimeStyleFileNames": [
    "designtime_style.css"
  ],
  "description": "Material 3 Design dropdown/select with outlined and filled variants",
  "displayName": "Material Select",
  "tagName": "material-select",
  "valuePropertyID": "value",
  "supports": [
    "Value",
    "Width",
    "IsVisible",
    "IsEnabled",
    "DataBinding"
  ],
  "events": [
    {
      "id": "Changed",
      "description": "Fires when the selection changes"
    }
  ],
  "properties": [
    {
      "id": "value",
      "refreshdisplay": "true",
      "friendlyname": "Value",
      "description": "Currently selected value",
      "type": "string",
      "inputlength": "500",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "label",
      "refreshdisplay": "true",
      "friendlyname": "Label",
      "description": "Floating label text",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "Select",
      "changesdisplay": true
    },
    {
      "id": "List",
      "refreshdisplay": "true",
      "friendlyname": "List Data",
      "type": "listdata",
      "category": "Detail",
      "initialvalue": "[{\"value\": \"option1\", \"label\": \"Option 1\"},{\"value\": \"option2\", \"label\": \"Option 2\"},{\"value\": \"option3\", \"label\": \"Option 3\"}]"
    },
    {
      "id": "listBinding",
      "refreshdisplay": "true",
      "friendlyname": "List Binding (JSON)",
      "description": "JSON array of options [{value, label}] - for backward compatibility. Use List Data for K2 binding.",
      "type": "string",
      "inputlength": "10000",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "options",
      "refreshdisplay": "true",
      "friendlyname": "Options",
      "description": "Dropdown options (comma-separated, or value:label pairs) - used if List Binding is empty",
      "type": "string",
      "inputlength": "2000",
      "initialvalue": "Option 1,Option 2,Option 3",
      "changesdisplay": true
    },
    {
      "id": "delimiter",
      "refreshdisplay": "true",
      "friendlyname": "Delimiter",
      "description": "Character used to separate options (default: comma)",
      "type": "string",
      "inputlength": "5",
      "initialvalue": ",",
      "changesdisplay": true
    },
    {
      "id": "variant",
      "refreshdisplay": "true",
      "friendlyname": "Variant",
      "description": "Visual style (outlined or filled)",
      "type": "string",
      "inputlength": "20",
      "initialvalue": "outlined",
      "changesdisplay": true
    },
    {
      "id": "placeholder",
      "refreshdisplay": "true",
      "friendlyname": "Placeholder",
      "description": "Placeholder text when no selection",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "leadingIcon",
      "refreshdisplay": "true",
      "friendlyname": "Leading Icon",
      "description": "Material icon name for leading icon",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "helperText",
      "refreshdisplay": "true",
      "friendlyname": "Helper Text",
      "description": "Helper text displayed below the select",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "errorText",
      "refreshdisplay": "true",
      "friendlyname": "Error Text",
      "description": "Error message to display",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "hasError",
      "refreshdisplay": "true",
      "friendlyname": "Has Error",
      "description": "Show error state (true/false)",
      "type": "string",
      "inputlength": "10",
      "initialvalue": "false",
      "changesdisplay": true
    },
    {
      "id": "required",
      "refreshdisplay": "true",
      "friendlyname": "Required",
      "description": "Mark the field as required (true/false)",
      "type": "string",
      "inputlength": "10",
      "initialvalue": "false",
      "changesdisplay": true
    },
    {
      "id": "primaryColor",
      "refreshdisplay": "true",
      "friendlyname": "Primary Color",
      "description": "Primary accent color",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "#6750A4",
      "changesdisplay": true
    },
    {
      "id": "textColor",
      "refreshdisplay": "true",
      "friendlyname": "Text Color",
      "description": "Color of the selected text",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "#1C1B1F",
      "changesdisplay": true
    },
    {
      "id": "labelColor",
      "refreshdisplay": "true",
      "friendlyname": "Label Color",
      "description": "Color of the floating label",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "#79747E",
      "changesdisplay": true
    },
    {
      "id": "borderColor",
      "refreshdisplay": "true",
      "friendlyname": "Border Color",
      "description": "Color of the border/outline",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "#79747E",
      "changesdisplay": true
    },
    {
      "id": "backgroundColor",
      "refreshdisplay": "true",
      "friendlyname": "Background Color",
      "description": "Background color (for filled variant)",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "#E7E0EC",
      "changesdisplay": true
    },
    {
      "id": "errorColor",
      "refreshdisplay": "true",
      "friendlyname": "Error Color",
      "description": "Color used for error state",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "#B3261E",
      "changesdisplay": true
    },
    {
      "id": "fontFamily",
      "refreshdisplay": "true",
      "friendlyname": "Font Family",
      "description": "Font family (Roboto, Open Sans, Poppins, Montserrat, Inter, Lato, etc.)",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "Roboto, sans-serif",
      "changesdisplay": true
    },
    {
      "id": "fontSize",
      "refreshdisplay": "true",
      "friendlyname": "Font Size",
      "description": "Font size in pixels",
      "type": "string",
      "inputlength": "10",
      "initialvalue": "16",
      "changesdisplay": true
    },
    {
      "id": "fontWeight",
      "refreshdisplay": "true",
      "friendlyname": "Font Weight",
      "description": "Font weight: normal, bold, 100-900",
      "type": "string",
      "inputlength": "20",
      "initialvalue": "normal",
      "changesdisplay": true
    },
    {
      "id": "fontStyle",
      "refreshdisplay": "true",
      "friendlyname": "Font Style",
      "description": "Font style: normal, italic",
      "type": "string",
      "inputlength": "20",
      "initialvalue": "normal",
      "changesdisplay": true
    }
  ],
  "methods": [
    {
      "id": "clear",
      "displayname": "Clear",
      "returntype": "None",
      "description": "Clear the current selection",
      "parameters": []
    },
    {
      "id": "open",
      "displayname": "Open",
      "returntype": "None",
      "description": "Open the dropdown menu",
      "parameters": []
    },
    {
      "id": "close",
      "displayname": "Close",
      "returntype": "None",
      "description": "Close the dropdown menu",
      "parameters": []
    }
  ]
}
