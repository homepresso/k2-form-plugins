{
  "icon": "icon.svg",
  "runtimeScriptFileNames": [
    "runtime_logic.js"
  ],
  "runtimeStyleFileNames": [
    "runtime_style.css"
  ],
  "designtimeScriptFileNames": [
    "designtime_logic.js"
  ],
  "designtimeStyleFileNames": [
    "designtime_style.css"
  ],
  "description": "NintexCase navigation menu with K2 list binding and mode support",
  "displayName": "NintexCase Navigation",
  "tagName": "nintexcase-navigation",
  "valuePropertyID": "selectedValue",
  "supports": [
    "Value",
    "Width",
    "IsVisible",
    "IsEnabled"
  ],
  "events": [
    {
      "id": "ItemClicked",
      "description": "Fires when a navigation item is clicked"
    },
    {
      "id": "UserMenuItemClicked",
      "description": "Fires when a user menu item is clicked"
    }
  ],
  "properties": [
    {
      "id": "selectedValue",
      "refreshdisplay": "true",
      "friendlyname": "Selected Value",
      "description": "Currently selected navigation item name",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "",
      "changesdisplay": false
    },
    {
      "id": "List",
      "type": "listdata",
      "category": "Detail",
      "refreshdisplay": "true",
      "friendlyname": "List",
      "description": "K2 list binding for navigation items (requires Name field, optional Mode field)"
    },
    {
      "id": "selectedUserMenuItem",
      "refreshdisplay": "true",
      "friendlyname": "Selected User Menu Item",
      "description": "Currently selected user menu item name",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "",
      "changesdisplay": false
    },
    {
      "id": "mode",
      "refreshdisplay": "true",
      "friendlyname": "Current Mode",
      "description": "Current mode to filter navigation items (if Mode field exists in list)",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "title",
      "refreshdisplay": "true",
      "friendlyname": "Title",
      "description": "Optional title text displayed on the left before navigation items (leave empty to hide)",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "titleColor",
      "refreshdisplay": "true",
      "friendlyname": "Title Color",
      "description": "Title text color",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "#FFFFFF",
      "changesdisplay": true
    },
    {
      "id": "titleFontSize",
      "refreshdisplay": "true",
      "friendlyname": "Title Font Size",
      "description": "Title font size in pixels",
      "type": "string",
      "inputlength": "10",
      "initialvalue": "18",
      "changesdisplay": true
    },
    {
      "id": "titleFontWeight",
      "refreshdisplay": "true",
      "friendlyname": "Title Font Weight",
      "description": "Title font weight: normal, bold, 100-900",
      "type": "string",
      "inputlength": "20",
      "initialvalue": "700",
      "changesdisplay": true
    },
    {
      "id": "UserMenuList",
      "type": "listdata",
      "category": "Detail",
      "refreshdisplay": "true",
      "friendlyname": "User Menu List",
      "description": "K2 list binding for user menu items (requires Name field)"
    },
    {
      "id": "showUserMenu",
      "refreshdisplay": "true",
      "friendlyname": "Show User Menu",
      "description": "Show or hide the user menu on the right side",
      "type": "string",
      "inputlength": "10",
      "initialvalue": "true",
      "changesdisplay": true
    },
    {
      "id": "displayName",
      "refreshdisplay": "true",
      "friendlyname": "Display Name",
      "description": "User's full name (used to generate initials in user menu)",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "John Doe",
      "changesdisplay": true
    },
    {
      "id": "userMenuButtonBackground",
      "refreshdisplay": "true",
      "friendlyname": "User Menu Button Background",
      "description": "User menu avatar button background (supports gradients)",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
      "changesdisplay": true
    },
    {
      "id": "userMenuButtonTextColor",
      "refreshdisplay": "true",
      "friendlyname": "User Menu Button Text Color",
      "description": "User menu avatar button text/initials color",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "#FFFFFF",
      "changesdisplay": true
    },
    {
      "id": "userMenuButtonBorderColor",
      "refreshdisplay": "true",
      "friendlyname": "User Menu Button Border Color",
      "description": "User menu avatar button border color (supports rgba)",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "rgba(255, 255, 255, 0.3)",
      "changesdisplay": true
    },
    {
      "id": "userMenuButtonSize",
      "refreshdisplay": "true",
      "friendlyname": "User Menu Button Size",
      "description": "User menu avatar button size in pixels",
      "type": "string",
      "inputlength": "10",
      "initialvalue": "40",
      "changesdisplay": true
    },
    {
      "id": "userMenuDropdownBackground",
      "refreshdisplay": "true",
      "friendlyname": "User Menu Dropdown Background",
      "description": "User menu dropdown background color",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "#FFFFFF",
      "changesdisplay": true
    },
    {
      "id": "userMenuDropdownTextColor",
      "refreshdisplay": "true",
      "friendlyname": "User Menu Dropdown Text Color",
      "description": "User menu dropdown text color",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "#1C1B1F",
      "changesdisplay": true
    },
    {
      "id": "userMenuDropdownHoverColor",
      "refreshdisplay": "true",
      "friendlyname": "User Menu Dropdown Hover Color",
      "description": "User menu dropdown item hover background color",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "#F5F5F5",
      "changesdisplay": true
    },
    {
      "id": "backgroundColor",
      "refreshdisplay": "true",
      "friendlyname": "Background Color",
      "description": "Navigation bar background color (supports gradients)",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
      "changesdisplay": true
    },
    {
      "id": "textColor",
      "refreshdisplay": "true",
      "friendlyname": "Text Color",
      "description": "Navigation item text color (supports rgba)",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "rgba(255, 255, 255, 0.95)",
      "changesdisplay": true
    },
    {
      "id": "activeColor",
      "refreshdisplay": "true",
      "friendlyname": "Active Color",
      "description": "Active/selected item background color (supports gradients)",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "#FFFFFF",
      "changesdisplay": true
    },
    {
      "id": "hoverColor",
      "refreshdisplay": "true",
      "friendlyname": "Hover Color",
      "description": "Item hover background color (supports rgba)",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "rgba(255, 255, 255, 0.15)",
      "changesdisplay": true
    },
    {
      "id": "borderColor",
      "refreshdisplay": "true",
      "friendlyname": "Border Color",
      "description": "Border color (legacy property)",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "#E0E0E0",
      "changesdisplay": true
    },
    {
      "id": "height",
      "refreshdisplay": "true",
      "friendlyname": "Height",
      "description": "Navigation bar height in pixels",
      "type": "string",
      "inputlength": "10",
      "initialvalue": "60",
      "changesdisplay": true
    },
    {
      "id": "borderRadius",
      "refreshdisplay": "true",
      "friendlyname": "Border Radius",
      "description": "Corner rounding in pixels (e.g., '0' for square, '8' for rounded, '8 8 0 0' for top corners only)",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "0",
      "changesdisplay": true
    },
    {
      "id": "fontFamily",
      "refreshdisplay": "true",
      "friendlyname": "Font Family",
      "description": "Font family for all text (e.g., 'Poppins', 'Roboto', 'Arial', 'Helvetica', 'Georgia', 'Times New Roman', 'Courier New', or custom font name)",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "Poppins, sans-serif",
      "changesdisplay": true
    },
    {
      "id": "titleFontFamily",
      "refreshdisplay": "true",
      "friendlyname": "Title Font Family",
      "description": "Font family for title text (leave empty to use main Font Family)",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "fontSize",
      "refreshdisplay": "true",
      "friendlyname": "Font Size",
      "description": "Font size in pixels",
      "type": "string",
      "inputlength": "10",
      "initialvalue": "14",
      "changesdisplay": true
    },
    {
      "id": "fontWeight",
      "refreshdisplay": "true",
      "friendlyname": "Font Weight",
      "description": "Font weight: normal, bold, 100-900",
      "type": "string",
      "inputlength": "20",
      "initialvalue": "500",
      "changesdisplay": true
    }
  ],
  "methods": [
    {
      "id": "clearSelection",
      "displayname": "Clear Selection",
      "returntype": "None",
      "description": "Clears the current selection",
      "parameters": []
    },
    {
      "id": "closeUserMenu",
      "displayname": "Close User Menu",
      "returntype": "None",
      "description": "Closes the user menu dropdown",
      "parameters": []
    }
  ]
}
