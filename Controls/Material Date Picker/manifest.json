      "inputlength": "20",
      "initialvalue": "MM/DD/YYYY",
      "changesdisplay": true
    },
    {
      "id": "minDate",
      "refreshdisplay": "true",
      "friendlyname": "Min Date",
      "description": "Minimum selectable date (YYYY-MM-DD)",
      "type": "string",
      "inputlength": "20",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "maxDate",
      "refreshdisplay": "true",
      "friendlyname": "Max Date",
      "description": "Maximum selectable date (YYYY-MM-DD)",
      "type": "string",
      "inputlength": "20",
      "initialvalue": "",
      "changesdisplay": true
