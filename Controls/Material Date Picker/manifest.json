{
  "icon": "icon.svg",
  "runtimeScriptFileNames": [
    "runtime_logic.js"
  ],
  "runtimeStyleFileNames": [
    "runtime_style.css"
  ],
  "designtimeScriptFileNames": [
    "designtime_logic.js"
  ],
  "designtimeStyleFileNames": [
    "designtime_style.css"
  ],
  "description": "Material 3 Design date picker with calendar dialog",
  "displayName": "Material Date Picker",
  "tagName": "material-date-picker",
  "valuePropertyID": "value",
  "supports": [
    "Value",
    "Width",
    "IsVisible",
    "IsEnabled"
  ],
  "events": [
    {
      "id": "Changed",
      "description": "Fires when the selected date changes"
    }
  ],
  "properties": [
    {
      "id": "value",
      "refreshdisplay": "true",
      "friendlyname": "Value",
      "description": "Selected date value",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "label",
      "refreshdisplay": "true",
      "friendlyname": "Label",
      "description": "Field label text",
      "type": "string",
      "inputlength": "100",
      "initialvalue": "Select date",
      "changesdisplay": true
    },
    {
      "id": "placeholder",
      "refreshdisplay": "true",
      "friendlyname": "Placeholder",
      "description": "Placeholder text",
      "type": "string",
      "inputlength": "50",
      "initialvalue": "MM/DD/YYYY",
      "changesdisplay": true
    },
    {
      "id": "helperText",
      "refreshdisplay": "true",
      "friendlyname": "Helper Text",
      "description": "Helper text below field",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "variant",
      "refreshdisplay": "true",
      "friendlyname": "Variant",
      "description": "Field style: outlined, filled",
      "type": "string",
      "inputlength": "20",
