      "id": "open",
      "displayname": "Open",
      "returntype": "None",
      "description": "Opens the date picker",
      "parameters": []
    },
    {
      "id": "close",
      "displayname": "Close",
      "returntype": "None",
      "description": "Closes the date picker",
      "parameters": []
    },
    {
      "id": "clear",
      "displayname": "Clear",
      "returntype": "None",
      "description": "Clears the selected date",
      "parameters": []
    }
  ]
